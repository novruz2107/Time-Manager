<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#383534</item>
        <item name="colorPrimaryDark">#120f0d</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SettingsTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#383534</item>
        <item name="colorPrimaryDark">#120f0d</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">30dp</item>
    </style>

    <style name="FragmentDialogStyle" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorPrimary">#383534</item>
        <item name="colorPrimaryDark">#120f0d</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">#fff</item>


    </style>


</resources>
